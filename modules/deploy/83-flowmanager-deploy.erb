apiVersion: apps/v1beta1
kind: Deployment
metadata:
  namespace: gpii
  name: flowmanager
spec:
  replicas: <%= ENV["TF_VAR_cluster_name"].start_with?("stg.","prd.") ? '6' : '2' %>
  template:
    metadata:
      labels:
        app: flowmanager
    spec:
      containers:
      - name: flowmanager
        image: <%= @versions["flowmanager"] %>
        ports:
        - containerPort: 8081
        env:
        - name: NODE_ENV
          value: gpii.config.cloudBased.flowManager.production
        - name: GPII_FLOWMANAGER_PREFERENCES_URL
          value: http://preferences.gpii.svc.cluster.local/preferences/%userToken
        - name: GPII_FLOWMANAGER_LISTEN_PORT
          value: '8081'
